{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["./*"]
    },
    "jsx": "preserve",
    "allowJs": true
  },
  "include": ["src/**/*.vue", "src/**/*.js", "src/**/**/*.vue", "src/**/**/*.js"],
  "exclude": ["node_modules", "dist"]
}
